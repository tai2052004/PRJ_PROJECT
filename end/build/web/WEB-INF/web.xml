<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddAndDelete</servlet-name>
        <servlet-class>servlet.AddAndDelete</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>selectionServlet</servlet-name>
        <servlet-class>servlet.selectionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserDetailServlet</servlet-name>
        <servlet-class>servlet.UserDetailServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewUser</servlet-name>
        <servlet-class>servlet.ViewUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logoutServlet</servlet-name>
        <servlet-class>servlet.logoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConfirmOrder</servlet-name>
        <servlet-class>servlet.ConfirmOrder</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddAndDelete</servlet-name>
        <url-pattern>/AddAndDelete</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ticketServlet</servlet-name>
        <servlet-class>servlet.ticketServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ticketServlet</servlet-name>
        <url-pattern>/ticketServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>selectionServlet</servlet-name>
        <url-pattern>/selectionServlet</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>logger</filter-name>
        <filter-class>Filter.NewFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>logger</filter-name>
        <url-pattern>/newjsp.jsp</url-pattern>
    </filter-mapping>
    <servlet-mapping>
        <servlet-name>UserDetailServlet</servlet-name>
        <url-pattern>/UserDetailServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewUser</servlet-name>
        <url-pattern>/ViewUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logoutServlet</servlet-name>
        <url-pattern>/logoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConfirmOrder</servlet-name>
        <url-pattern>/ConfirmOrder</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>5</session-timeout>
    </session-config>
    <filter-mapping>
        <filter-name>logger</filter-name>
        <url-pattern>/payment.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>logger</filter-name>
        <url-pattern>/info.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>logger</filter-name>
        <url-pattern>/userDetail.jsp</url-pattern>
    </filter-mapping>
</web-app>
